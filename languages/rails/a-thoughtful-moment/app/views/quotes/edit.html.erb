<div class="container">
<div class="row">
<div class="col-lg-6">
<h1 class="mt-3 mb-3">Update Quote</h1>
<%= form_with model:@quote do |form| %>
    <div class="mb-3">
        <%=form.label :content , class:'form-label'%>
        <%=form.text_area :content, class:'form-control', placeholder:'Enter Quote Here'%>
    </div>
    <div class="mb-3">
        <%=form.label :image, class:'form-label'%>
        <%=form.text_field :image,class:'form-control',placeholder:'Image Url'%>
    </div>
    <div>
    <%=form.submit 'Update Quote' ,class: "btn btn-primary mt-2"%>
    </div>
<%end%>
    </div>
    <div class="col-lg-6 d-flex justify-content-center align-items-center">
        <img class="img-fluid border border-primary border-2 shadow" src="<%=@quote.image%>">
    </div>
</div>
</div>