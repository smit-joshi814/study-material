<div class="album py-5 bg-body-tertiary">
    <div class="container">
<div>
 <a href="/quotes/new" class="btn btn-primary mb-3">add new Quote</a>
</div>

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @quotes.each do |quote| %>

        <div class="col">
          <div class="card shadow-sm">
            <div class="card-body">
              <p class="card-text"><%=quote.content%></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to 'view' , quote, class:'btn btn-sm btn-outline-primary'%>
                  <%= link_to 'edit' , edit_quote_path(quote), class:'btn btn-sm btn-outline-secondary'%>
                  <%= link_to "delete", quote_path(quote), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                    },class:'btn btn-sm btn-outline-danger' %>
                </div>
                <small class="text-body-secondary"><%=quote.created_at.to_date%></small>
              </div>
            </div>
          </div>
        </div>

        <% end %>

      </div>
    </div>
  </div>